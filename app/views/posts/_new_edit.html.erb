<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_for(post) do |f|%>
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group">
        <%= f.label :photo, 'Photo' %>
        <%= f.file_field :photo %>
        <%= f.hidden_field :photo_cache %>
      </div>
      
      <div class="form-group">
        <%= f.label :title, 'Title' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :caption, 'Caption' %>
        <%= f.text_field :caption, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :used_camera, 'Camera' %>
        <%= f.text_field :used_camera, class: 'form-control' %>
      </div>

      <div class="form-group">
        <label><%= f.radio_button :color, "カラー" %>カラー</label>
        <label><%= f.radio_button :color, "白黒" %>白黒</label>
      </div>

      <%= f.submit '完了', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>